<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowserFragment">

    <ProgressBar
        android:id="@+id/progress_bar_fragment"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/webview_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_fragment" />

    <!-- Find in Page Layout Overlay -->
    <LinearLayout
        android:id="@+id/find_in_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <EditText
            android:id="@+id/find_in_page_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Find in page"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:textColor="?attr/colorOnPrimary"
            android:textColorHint="?attr/colorOnPrimaryContainer"
            android:backgroundTint="?attr/colorSecondary"
            tools:ignore="Autofill" />

        <ImageButton
            android:id="@+id/find_in_page_prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous match"
            android:padding="8dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="?attr/colorOnPrimary" />

        <ImageButton
            android:id="@+id/find_in_page_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next match"
            android:padding="8dp"
            android:src="@android:drawable/ic_media_next"
            app:tint="?attr/colorOnPrimary" />

        <ImageButton
            android:id="@+id/find_in_page_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close find"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="?attr/colorOnPrimary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>